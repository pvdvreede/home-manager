{
    "build": {
        "dockerfile": "./Dockerfile",
        "context": "../"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "CalebFiggers.vscode-janet-plus-plus"
            ],
            "settings": {
                "editor.formatOnSave": true,
                "editor.formatOnPaste": true,
                "editor.defaultFormatter": "CalebFiggers.vscode-janet-plus-plus",
                "editor.codeActionsOnSave": {
                    "source.fixAll": true
                }
            }
        }
    },
    "remoteUser": "janetuser"
}